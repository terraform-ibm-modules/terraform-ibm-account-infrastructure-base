{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>terraform-ibm-modules/common-dev-assets:commonRenovateConfig"],
  "packageRules": [
    {
      "description": "Use fix as Semantic Commit prefix for all dependency updates in these folders to generate release",
      "matchFileNames": ["solutions/account-infrastructure-base"],
      "semanticCommitType": "fix"
    },
    {
      "description": "Allow the locked in provider version to be updated to the latest for DAs",
      "enabled": true,
      "matchFileNames": ["solutions/account-infrastructure-base"],
      "matchManagers": ["terraform"],
      "matchDepTypes": ["required_provider"],
      "rangeStrategy": "bump",
      "semanticCommitType": "fix",
      "group": true,
      "groupName": "required_provider",
      "commitMessageExtra": "to latest for the DA solution"
    }
  ]
}
